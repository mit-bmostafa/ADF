{
	"name": "26_core_ss_loader",
	"properties": {
		"activities": [
			{
				"name": "25_1_hive_to_sqlserver",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@pipeline().parameters.cw_items",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "25_3_1_copy_core_tables",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "HiveSource",
									"query": {
										"value": "@concat('select * from reg20_master_data_core.', item().source.table)",
										"type": "Expression"
									}
								},
								"sink": {
									"type": "AzureSqlSink",
									"preCopyScript": {
										"value": "@{concat('truncate table reg20_master_data_core.', item().source.table)}",
										"type": "Expression"
									},
									"disableMetricsCollection": false
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "ds_hdi_hive",
									"type": "DatasetReference"
								}
							],
							"outputs": [
								{
									"referenceName": "sqlserver_reg20_master_data_core",
									"type": "DatasetReference",
									"parameters": {
										"dw_table": "@item().source.table"
									}
								}
							]
						}
					]
				}
			}
		],
		"parameters": {
			"cw_items": {
				"type": "array",
				"defaultValue": [
					{
						"source": {
							"table": "lob"
						}
					},
					{
						"source": {
							"table": "sub_lob"
						}
					},
					{
